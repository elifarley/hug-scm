#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

# Part of the Hug tool suite

show_help() {
  cat << 'EOF'
hug ss: Show status with patch of staged changes.

USAGE:
    hug ss [<file>] [-h, --help]
    hug ss --

ARGUMENTS:
    <file>         Show staged changes for specific file (optional)
    --             Interactive file selection from staged files

OPTIONS:
    -h, --help     Show this help

DESCRIPTION:
    Shows the diff of staged changes (what will be committed). When no file
    is specified, shows all staged changes. Use '--' to interactively select
    a file from staged files.

EXAMPLES:
    hug ss                 # Show all staged changes
    hug ss file.txt        # Show staged changes for specific file
    hug ss --              # Interactive file selection

SEE ALSO:
    hug su       : Show unstaged changes
    hug sw       : Show working directory changes
    hug s        : Show status
EOF
}

# Parse common flags (handles -- detection automatically)
eval "$(parse_common_flags "$@")"

check_git_repo

# Handle interactive file selection if requested
if [[ "${HUG_INTERACTIVE_FILE_SELECTION:-}" = "true" ]]; then
  mapfile -t files < <(select_files_with_status --staged --prompt "Select file(s) to view staged changes..." || true)
  if [[ ${#files[@]} -eq 0 ]]; then
    info "No staged files available or cancelled."
    exit 0
  fi
  for file in "${files[@]}"; do
    printf '─────────────────── Staged changes for %s:\n' "$file"
    git diff --cached -- "$file"
    git diff --cached --stat -- "$file"
  done
  git s
  exit 0
fi

if test $# -eq 0; then
  printf '─────────────────── Staged changes:\n'
  git diff --cached
  git diff --cached --stat
else
  t="$1"; shift
  printf '─────────────────── Staged changes for FILE:\n'
  test "${GIT_PREFIX:-}" || GIT_PREFIX=$(git rev-parse --show-prefix 2>/dev/null || echo "")
  git diff --cached "$@" -- "${GIT_PREFIX}$t"
  git diff --cached --stat "$@" -- "${GIT_PREFIX}$t"
fi
git s
