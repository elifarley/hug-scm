#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2> /dev/null || greadlink -f "$0")" || CMD_BASE="$0"
CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

# Part of the Hug tool suite

show_help() {
  cat << 'EOF'
hug ss: Show status with patch of staged diff.

USAGE:
    hug ss [<file>] [-s, --stat] [-h, --help]
    hug ss --
    hug ss --browse-root

ARGUMENTS:
    <file>         Show staged diff for specific file (optional)
    --             Interactive file selection from staged files (current directory scope)

OPTIONS:
    --browse-root  Browse full repository scope in file selector UI (default: current directory)
    -s, --stat     Show only file statistics (omit patch)
    -q, --quiet    Suppress summary line (also honors HUG_QUIET env var)
    -h, --help     Show this help

DESCRIPTION:
    Shows the staged diff (what will be committed). When no file
    is specified, shows all staged diff. By default shows both patch and
    statistics. Use '--stat' to show statistics only, or '--no-stats' to
    show patch only. Use '--' to interactively select a file from staged files.

EXAMPLES:
    hug ss                  # Show all staged diff (patch + stats)
    hug ss --stat           # Show only staged statistics
    hug ss file.txt         # Show staged diff for specific file
    hug ss --stat file.txt  # Show stats for specific file only
    hug ss --               # Interactive file selection (current directory)
    hug ss --browse-root    # Interactive file selection (full repository)

SEE ALSO:
    hug su       : Show unstaged diff
    hug sw       : Show working directory changes
    hug s        : Show status
EOF
}

# Parse common flags (handles --browse-root, --, etc.)
eval "$(parse_common_flags "$@")"

# Initialize common flag variables if not set by parse_common_flags
: "${browse_root:=false}"

# Parse --stat flag
stats_only=""
remaining_args=()
for arg in "$@"; do
  case "$arg" in
  -s | --stat)
    stats_only="1"
    ;;
  *)
    remaining_args+=("$arg")
    ;;
  esac
done
set -- "${remaining_args[@]}"

check_git_repo

# Handle interactive file selection if requested
if [[ "${HUG_INTERACTIVE_FILE_SELECTION:-}" = "true" ]]; then
  declare -a select_opts=("--staged")

  # Default to --cwd (current directory scope) unless --browse-root is specified
  if ! $browse_root; then
    select_opts+=("--cwd")
  fi

  select_opts+=("--prompt" "Select file(s) to view staged diff...")

  mapfile -t files < <(select_files_with_status "${select_opts[@]}" || true)
  if [[ ${#files[@]} -eq 0 ]]; then
    info "No staged files available or cancelled."
    exit 0
  fi
  for file in "${files[@]}"; do
    show_staged_diff ${stats_only:+--stats-only} -- "$file"
  done
  if [[ ${HUG_QUIET:-} != T ]]; then
    git s
  fi
  exit 0
fi

if test $# -eq 0; then
  show_staged_diff ${stats_only:+--stats-only}
else
  t="$1"
  shift
  test "${GIT_PREFIX:-}" || GIT_PREFIX=$(git rev-parse --show-prefix 2> /dev/null || echo "")
  show_staged_diff ${stats_only:+--stats-only} -- "${GIT_PREFIX}$t" "$@"
fi
if [[ ${HUG_QUIET:-} != T ]]; then
  exec hug s
fi
