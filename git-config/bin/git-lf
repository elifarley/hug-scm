#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

show_help() {
  cat << 'EOF'
hug lf: Search commits by MESSAGE.

USAGE:
    hug lf [<search-term>] [-i] [-p] [--all] [-- <file>] [-h, --help]

ARGUMENTS:
    <search-term>  Text to search for in commit messages
                   (optional - prompts for input if omitted)

OPTIONS:
    -i             Ignore case when searching
    -p             Show patches
    --all          Consider ALL branches (not just current)
    -- <file>      Restrict search to specific file
    -h, --help     Show this help

DESCRIPTION:
    Searches commit messages for the specified text. Can optionally:
    - Search case-insensitively
    - Show patches for matching commits
    - Search across all branches
    - Restrict to changes in a specific file

EXAMPLES:
    hug lf                      # Interactive: enter search term
    hug lf "bug fix"            # Search for "bug fix" in commit messages
    hug lf "feature" -i         # Case-insensitive search
    hug lf "refactor" -p        # Show patches for matching commits
    hug lf "update" --all       # Search all branches
    hug lf "change" -- file.js  # Search in commits affecting file.js

SEE ALSO:
    hug lc       : Search commits by code changes
    hug lcr      : Search commits by regex code changes
    hug llf      : Log commits for file
EOF
}

# Parse common flags
eval "$(parse_common_flags "$@")"

check_git_repo

# If no search term provided, prompt for it
if [ $# -eq 0 ]; then
  if ! gum_available; then
    show_help
    exit 1
  fi
  search_term=""
  if ! search_term=$(gum input --placeholder "Enter search term for commit messages..." 2>/dev/null || true); then
    info "Cancelled."
    exit 0
  fi
  if [[ -z "$search_term" ]]; then
    info "No search term provided."
    exit 0
  fi
  exec hug ll --grep="$search_term"
fi

search_term="$1"
shift

exec hug ll --grep="$search_term" "$@"
