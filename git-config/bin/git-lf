#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

show_help() {
  cat << 'EOF'
hug lf: Search commits by MESSAGE.

USAGE:
    hug lf <search-term> [-i] [-p] [--all] [--json] [--with-files] [--no-body] [-- [<file>]] [--browse-root] [-h, --help]

ARGUMENTS:
    <search-term>  Text to search for in commit messages (required)
    <file>         Restrict search to specific file (optional)

OPTIONS:
    -i             Ignore case when searching
    -p             Show patches
    --all          Consider ALL branches (not just current)
    --json         Output as JSON (GitHub-compatible format, same as 'hug ll --json')
    --with-files   Show files changed in each matching commit (JSON: includes numstat)
    --no-body      Omit commit message body (JSON mode only, faster)
    --browse-root  Browse full repository scope in file selector UI (default: current directory)
    -- <file>      Restrict search to specific file
    -- (last arg)  Restrict search with interactive file selection (current directory scope)
    -h, --help     Show this help

DESCRIPTION:
    Searches commit messages for the specified text. Can optionally:
    - Search case-insensitively
    - Show patches for matching commits
    - Search across all branches
    - Restrict to changes in a specific file
    By default, interactive selection is scoped to the current directory and
    subdirectories. Use --browse-root to browse the entire repository.

EXAMPLES:
    hug lf "bug fix"            # Search for "bug fix" in commit messages
    hug lf "feature" -i         # Case-insensitive search
    hug lf "refactor" -p        # Show patches for matching commits
    hug lf "update" --with-files # Show files changed in each match
    hug lf "update" --all       # Search all branches
    hug lf "change" -- file.js  # Search in commits affecting file.js
    hug lf "change" --          # Search with interactive file selection (current directory)
    hug lf "change" --browse-root  # Search with interactive file selection (full repository)

SEE ALSO:
    hug lc       : Search commits by code changes
    hug lcr      : Search commits by regex code changes
    hug llf      : Log commits for file
EOF
}

# Parse common flags (handles --browse-root, --, etc.)
eval "$(parse_common_flags "$@")"

# Initialize common flag variables if not set by parse_common_flags
: "${browse_root:=false}"

# Parse flags
json_output=false
with_files=false
no_body=false
remaining_args=()
for arg in "$@"; do
  case "$arg" in
    --json)
      json_output=true
      export HUG_JSON_MODE="true"
      ;;
    --with-files)
      with_files=true
      ;;
    --no-body)
      no_body=true
      ;;
    *)
      remaining_args+=("$arg")
      ;;
  esac
done
set -- "${remaining_args[@]}"

# Check if in git repo, handle errors appropriately
if ! check_git_repo 2>/dev/null; then
  if $json_output; then
    . "$CMD_BASE/../lib/hug-json"
    json_error "not_git_repo" "Not in a Git or Mercurial repository" 1
  else
    check_git_repo  # Show normal error
  fi
fi

# Check if search term provided
if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

search_term="$1"
shift

# JSON output mode - use batched operations for performance
if $json_output; then
  # Load batch JSON utilities for optimized performance
  . "$CMD_BASE/../lib/hug-git-json"

  # Build search response with batched git operations
  search_args=()
  $with_files || search_args+=("--no-files")  # Don't need file status
  $no_body && search_args+=("--no-body")

  # Add remaining git log arguments
  search_args+=("$@")

  # Output unified JSON response with metadata
  search_results=$(batch_commit_search "$search_term" "${search_args[@]}")

  # Build command name with flags for output
  cmd_name="hug lf --json"
  $with_files && cmd_name="$cmd_name --with-files"
  $no_body && cmd_name="$cmd_name --no-body"

  # Count results
  results_count=$(echo "$search_results" | jq 'length' 2>/dev/null || echo "0")

  # Wrap with metadata and output
  output_json_response "$cmd_name" "{\"search\":{\"type\":\"message\",\"term\":\"$search_term\",\"results_count\":$results_count,\"with_files\":$with_files},\"results\":$search_results}" --with-branch --with-head
  exit 0
fi

# Handle interactive file selection if requested
if [[ "${HUG_INTERACTIVE_FILE_SELECTION:-}" = "true" ]]; then
  # Show interactive file selection
  if gum_available; then
    declare -a select_opts=("--single")

    # Default to --cwd (current directory scope) unless --browse-root is specified
    if ! $browse_root; then
      select_opts+=("--cwd")
    fi

    select_opts+=("--prompt" "Select file to restrict search...")

    file=""
    if file=$(select_files_with_status "${select_opts[@]}"); then
      if $with_files; then
        exec hug ll --grep="$search_term" --name-status "$@" -- "$file"
      else
        exec hug ll --grep="$search_term" "$@" -- "$file"
      fi
    else
      info "Cancelled."
      exit 0
    fi
  else
    error "Interactive file selection requires 'gum' to be installed.
Usage: hug lf <search-term> [options] -- <file>
Install gum: https://github.com/charmbracelet/gum"
  fi
fi

# Execute with or without files listing
if $with_files; then
  exec hug ll --grep="$search_term" --name-status "$@"
else
  exec hug ll --grep="$search_term" "$@"
fi
