#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail  # Exit on error, undefined vars, pipe failures

# Part of the Hug tool suite

show_help() {
  printf 'hug llfs: Log commits to a file with change stats.\n' >&2
  printf '<file>: File to show log for (optional - prompts for selection if omitted).\n' >&2
  printf '--browse-root: Browse full repository scope in file selector UI (default: current directory).\n' >&2
  printf '[-N]: Limit to last N commits (e.g., -1 for most recent).\n' >&2
  printf 'Usage: hug llfs [<file>] [-N] [--browse-root] [log options]\n' >&2
  printf 'Examples:\n' >&2
  printf '  hug llfs                  # Interactive file selection (current directory)\n' >&2
  printf '  hug llfs --browse-root    # Interactive file selection (full repository)\n' >&2
  printf '  hug llfs file.txt -1      # Stats for most recent change\n' >&2
}

# Parse --browse-root flag before common flags
browse_root=false
new_args=()
for arg in "$@"; do
  if [[ "$arg" == "--browse-root" ]]; then
    browse_root=true
  else
    new_args+=("$arg")
  fi
done
set -- "${new_args[@]}"

# Parse common flags
eval "$(parse_common_flags "$@")"

# If no file provided, show interactive selection or help
if [ $# -eq 0 ]; then
  # Only show interactive selection if gum is available
  if gum_available; then
    declare -a select_opts=("--single")
    
    # Default to --cwd (current directory scope) unless --browse-root is specified
    if ! $browse_root; then
      select_opts+=("--cwd")
    fi
    
    select_opts+=("--prompt" "Select file to view log with stats...")
    
    file=""
    if ! file=$(select_files_with_status "${select_opts[@]}"); then
      info "No file selected or cancelled."
      exit 0
    fi
    exec hug llf "$file" --stat
  else
    # Fall back to showing help when gum is not available
    show_help
    exit 1
  fi
fi

file="$1"; shift

exec hug llf "$file" --stat "$@"
