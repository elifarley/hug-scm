#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

show_help() {
  cat << 'EOF'
hug lcr: Search commits by RegEx CODE CHANGES in diff.

USAGE:
    hug lcr <regex> [-i] [-p] [--all] [-- [<file>]] [-h, --help]

ARGUMENTS:
    <regex>        Regular expression to search for in code changes (required)
    <file>         Restrict search to specific file (optional)

OPTIONS:
    -i             Ignore case when searching
    -p             Show patches
    --all          Consider ALL branches (not just current)
    -- <file>      Restrict search to specific file
    -- (last arg)  Restrict search with interactive file selection
    -h, --help     Show this help

DESCRIPTION:
    Searches for commits where the specified regular expression pattern
    matches changes in the diff. This is useful for finding when code
    matching a pattern was introduced or changed.

EXAMPLES:
    hug lcr "function.*User"        # Find commits with function definitions
    hug lcr "TODO|FIXME" -i         # Case-insensitive pattern search
    hug lcr "import.*from" -p       # Show patches for matches
    hug lcr "class \w+" -- src/     # Search in specific directory
    hug lcr "class \w+" --          # Search with interactive file selection

SEE ALSO:
    hug lf       : Search commits by message
    hug lc       : Search commits by code changes (literal text)
    hug llf      : Log commits for file
EOF
}

# Parse common flags (handles -- detection automatically)
eval "$(parse_common_flags "$@")"

check_git_repo

# Check if regex pattern provided
if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

regex_pattern="$1"
shift

# Handle interactive file selection if requested
if [[ "${HUG_INTERACTIVE_FILE_SELECTION:-}" = "true" ]]; then
  # Show interactive file selection
  if gum_available; then
    file=""
    if file=$(select_file "Select file to restrict search..."); then
      exec hug ll -G "$regex_pattern" "$@" -- "$file"
    else
      info "Cancelled."
      exit 0
    fi
  else
    error "Interactive file selection requires 'gum' to be installed.
Usage: hug lcr <regex> [options] -- <file>
Install gum: https://github.com/charmbracelet/gum"
  fi
fi

exec hug ll -G "$regex_pattern" "$@"
