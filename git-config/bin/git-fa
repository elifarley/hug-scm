#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2> /dev/null || greadlink -f "$0")" || CMD_BASE="$0"
CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

show_help() {
  cat << 'EOF'
hug fa: Count commits per author for a file.

USAGE:
    hug fa [<file>] [-h, --help]
    hug fa --browse-root

ARGUMENTS:
    <file>          File to analyze (optional - prompts for selection if omitted)

OPTIONS:
    --browse-root   Browse full repository scope in file selector UI (default: current directory)
    -h, --help      Show this help

DESCRIPTION:
    Shows the number of commits each author has made to a file, sorted by
    commit count (most active first). Follows renames through history.
    By default, interactive selection is scoped to the current directory and
    subdirectories. Use --browse-root to browse the entire repository.

EXAMPLES:
    hug fa                      # Interactive file selection (current directory)
    hug fa --browse-root        # Interactive file selection (full repository)
    hug fa src/app.js           # Count commits per author for specific file

SEE ALSO:
    hug fblame   : Show who changed what line
    hug fb       : Short blame (author and line only)
    hug fcon     : List all contributors to a file
EOF
}

# Parse common flags (handles --browse-root, etc.)
eval "$(parse_common_flags "$@")"

# Initialize common flag variables if not set by parse_common_flags
: "${browse_root:=false}"

check_git_repo

# If no file provided, show interactive selection or error
if [ $# -eq 0 ]; then
  # Only show interactive selection if gum is available
  if gum_available; then
    declare -a select_opts=("--single")

    # Default to --cwd (current directory scope) unless --browse-root is specified
    if ! $browse_root; then
      select_opts+=("--cwd")
    fi

    select_opts+=("--prompt" "Select file to count commits per author...")

    file=""
    if ! file=$(select_files_with_status "${select_opts[@]}"); then
      info "No file selected or cancelled."
      exit 0
    fi
    git log --follow --format='%an' -- "$file" | sort | uniq -c | sort -rn
    exit 0
  else
    # Fall back to error when gum is not available
    error "File argument required. Install 'gum' for interactive file selection.
Usage: hug fa <file>
Install gum: https://github.com/charmbracelet/gum"
  fi
fi

exec git log --follow --format='%an' -- "$@" | sort | uniq -c | sort -rn
