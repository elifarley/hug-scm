#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2> /dev/null || greadlink -f "$0")" || CMD_BASE="$0"
CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

# Part of the Hug tool suite

show_help() {
  cat << 'EOF'
hug su: Show status with patch of unstaged diff.

USAGE:
    hug su [<file>] [-s, --stat] [-h, --help]
    hug su --
    hug su --browse-root

ARGUMENTS:
    <file>         Show unstaged diff for specific file (optional)
    --             Interactive file selection from unstaged files (current directory scope)

OPTIONS:
    --browse-root  Browse full repository scope in file selector UI (default: current directory)
    -s, --stat     Show only file statistics (omit patch)
    -q, --quiet    Suppress summary line (also honors HUG_QUIET env var)
    -h, --help     Show this help

DESCRIPTION:
    Shows the unstaged diff (modifications not yet staged). When
    no file is specified, shows all unstaged diff. By default shows both
    patch and statistics. Use '--stat' to show statistics only, or '--no-stats'
    to show patch only. Use '--' to interactively select a file from unstaged files.

EXAMPLES:
    hug su                  # Show all unstaged diff (patch + stats)
    hug su --stat           # Show only unstaged statistics
    hug su file.txt         # Show unstaged diff for specific file
    hug su --stat file.txt  # Show stats for specific file only
    hug su --               # Interactive file selection (current directory)
    hug su --browse-root    # Interactive file selection (full repository)

SEE ALSO:
    hug ss       : Show staged diff
    hug sw       : Show working directory changes
    hug s        : Show status
EOF
}

# Parse common flags (handles --browse-root, --, etc.)
eval "$(parse_common_flags "$@")"

# Initialize common flag variables if not set by parse_common_flags
: "${browse_root:=false}"

# Parse --stat flag
stats_only=""
remaining_args=()
for arg in "$@"; do
  case "$arg" in
  -s | --stat)
    stats_only="1"
    ;;
  *)
    remaining_args+=("$arg")
    ;;
  esac
done
set -- "${remaining_args[@]}"

check_git_repo

# Handle interactive file selection if requested
if [[ "${HUG_INTERACTIVE_FILE_SELECTION:-}" = "true" ]]; then
  declare -a select_opts=("--unstaged")

  # Default to --cwd (current directory scope) unless --browse-root is specified
  if ! $browse_root; then
    select_opts+=("--cwd")
  fi

  select_opts+=("--prompt" "Select file(s) to view unstaged diff...")

  mapfile -t files < <(select_files_with_status "${select_opts[@]}" || true)
  if [[ ${#files[@]} -eq 0 ]]; then
    info "No unstaged files available or cancelled."
    exit 0
  fi
  for file in "${files[@]}"; do
    show_unstaged_diff ${stats_only:+--stats-only} -- "$file"
  done
  if [[ ${HUG_QUIET:-} != T ]]; then
    git s
  fi
  exit 0
fi

if test $# -eq 0; then
  show_unstaged_diff ${stats_only:+--stats-only}
else
  t="$1"
  shift
  test "${GIT_PREFIX:-}" || GIT_PREFIX=$(git rev-parse --show-prefix 2> /dev/null || echo "")
  show_unstaged_diff ${stats_only:+--stats-only} -- "${GIT_PREFIX}$t" "$@"
fi
if [[ ${HUG_QUIET:-} != T ]]; then
  exec hug s
fi
