#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

# Part of the Hug tool suite

show_help() {
  cat << 'EOF'
hug su: Show status with patch of unstaged changes.

USAGE:
    hug su [<file>] [-h, --help]
    hug su --
    hug su --browse-root

ARGUMENTS:
    <file>         Show unstaged changes for specific file (optional)
    --             Interactive file selection from unstaged files (current directory scope)

OPTIONS:
    --browse-root  Browse full repository scope in file selector UI (default: current directory)
    -h, --help     Show this help

DESCRIPTION:
    Shows the diff of unstaged changes (modifications not yet staged). When
    no file is specified, shows all unstaged changes. Use '--' to
    interactively select a file from unstaged files. By default, interactive
    selection is scoped to the current directory and subdirectories. Use
    --browse-root to browse the entire repository.

EXAMPLES:
    hug su                  # Show all unstaged changes
    hug su file.txt         # Show unstaged changes for specific file
    hug su --               # Interactive file selection (current directory)
    hug su --browse-root    # Interactive file selection (full repository)

SEE ALSO:
    hug ss       : Show staged changes
    hug sw       : Show working directory changes
    hug s        : Show status
EOF
}

# Parse common flags (handles --browse-root, --, etc.)
eval "$(parse_common_flags "$@")"

# Initialize common flag variables if not set by parse_common_flags
: "${browse_root:=false}"

check_git_repo

# Handle interactive file selection if requested
if [[ "${HUG_INTERACTIVE_FILE_SELECTION:-}" = "true" ]]; then
  declare -a select_opts=("--unstaged")
  
  # Default to --cwd (current directory scope) unless --browse-root is specified
  if ! $browse_root; then
    select_opts+=("--cwd")
  fi
  
  select_opts+=("--prompt" "Select file(s) to view unstaged changes...")
  
  mapfile -t files < <(select_files_with_status "${select_opts[@]}" || true)
  if [[ ${#files[@]} -eq 0 ]]; then
    info "No unstaged files available or cancelled."
    exit 0
  fi
  for file in "${files[@]}"; do
    printf '─────────────────── Unstaged changes for %s:\n' "$file"
    git diff -- "$file"
    git diff --stat -- "$file"
  done
  git s
  exit 0
fi

if test $# -eq 0; then
  printf '─────────────────── Unstaged changes:\n'
  git diff
  git diff --stat
else
  t="$1"; shift
  printf '─────────────────── Unstaged changes for FILE:\n'
  test "${GIT_PREFIX:-}" || GIT_PREFIX=$(git rev-parse --show-prefix 2>/dev/null || echo "")
  git diff "$@" -- "${GIT_PREFIX}$t"
  git diff --stat "$@" -- "${GIT_PREFIX}$t"
fi
exec hug s
