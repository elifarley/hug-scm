#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2> /dev/null || greadlink -f "$0")" || CMD_BASE="$0"
CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done # Load common constants and functions
set -euo pipefail                                                 # Exit on error, undefined vars, pipe failures

# Part of the Hug tool suite

show_help() {
  cat << 'EOF'
hug bl: TEMPORARILY DISABLED

The short branch list format is temporarily disabled during migration to the
new Python-based implementation with date display support.

Please use:
  hug bll  - For long format branch listing (includes dates)
  hug b    - For interactive branch switching

This command will be re-enabled once the migration is complete.
EOF
}

# Parse common flags
eval "$(parse_common_flags "$@")"

# Show help or error message
if [[ "${SHOW_HELP:-false}" == "true" ]]; then
  show_help
  exit 0
fi

error "hug bl: TEMPORARILY DISABLED - Use 'hug bll' for long format listing"
