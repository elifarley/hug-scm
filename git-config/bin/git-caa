#!/usr/bin/env bash
set -euo pipefail  # Exit on error, undefined vars, pipe failures
# Part of the Hug tool suite

# Commit tracked + untracked + deletions
test "${1:-}" = '-h' -o "${1:-}" = '--help' && {
  printf 'caa: Commit tracked + untracked + deletions.\n'
  printf 'See also:\n'
  printf '  hug c\n'
  printf '  hug ca\n'
  exit 1
}

hug aa && hug c "$@"
