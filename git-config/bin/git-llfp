#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail  # Exit on error, undefined vars, pipe failures

# Part of the Hug tool suite

show_help() {
  printf 'hug llfp: Log commits to a file with patches.\n' >&2
  printf '-<N>: Limit to last N commits (e.g., -1 for most recent).\n' >&2
  printf 'Usage: hug llfp <file> [-N] [log options]\n' >&2
  printf 'Examples:\n' >&2
  printf '  hug llfp file.txt -1  # Patch of most recent change\n' >&2
}

# Parse common flags
eval "$(parse_common_flags "$@")"

if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

file="$1"; shift

exec hug llf "$file" -p "$@"
