#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-git-kit; do . "$CMD_BASE/../lib/$f"; done
set -euo pipefail

# Part of the Hug tool suite

show_help() {
  cat << 'EOF'
hug sw: Show status with patch of working directory changes.

USAGE:
    hug sw [<file>] [-h, --help]
    hug sw --
    hug sw --browse-root

ARGUMENTS:
    <file>         Show working directory changes for specific file (optional)
    --             Interactive file selection from changed files (current directory scope)

OPTIONS:
    --browse-root  Browse full repository scope in file selector UI (default: current directory)
    -h, --help     Show this help

DESCRIPTION:
    Shows the diff of all working directory changes, split into unstaged and
    staged sections. First shows unstaged diff with stats, then shows staged
    changes with stats, separated by a divider. This effectively combines the
    output of 'hug su' and 'hug ss'.

EXAMPLES:
    hug sw                  # Show all working directory changes (unstaged + staged)
    hug sw file.txt         # Show working directory changes for specific file
    hug sw --               # Interactive file selection (current directory)
    hug sw --browse-root    # Interactive file selection (full repository)

SEE ALSO:
    hug ss       : Show staged diff
    hug su       : Show unstaged diff
    hug s        : Show status
EOF
}

# Parse common flags (handles --browse-root, --, etc.)
eval "$(parse_common_flags "$@")"

# Initialize common flag variables if not set by parse_common_flags
: "${browse_root:=false}"

check_git_repo

# Handle interactive file selection if requested
if [[ "${HUG_INTERACTIVE_FILE_SELECTION:-}" = "true" ]]; then
  declare -a select_opts=("--staged" "--unstaged")

  # Default to --cwd (current directory scope) unless --browse-root is specified
  if ! $browse_root; then
    select_opts+=("--cwd")
  fi

  select_opts+=("--prompt" "Select file(s) to view uncommitted changes...")

  mapfile -t files < <(select_files_with_status "${select_opts[@]}" || true)
  if [[ ${#files[@]} -eq 0 ]]; then
    info "No files with working directory changes available or cancelled."
    exit 0
  fi
  for file in "${files[@]}"; do
    show_combined_diff -- "$file"
  done
  git s
  exit 0
fi

if test $# -eq 0; then
  show_combined_diff
else
  t="$1"; shift
  test "${GIT_PREFIX:-}" || GIT_PREFIX=$(git rev-parse --show-prefix 2>/dev/null || echo "")
  show_combined_diff -- "${GIT_PREFIX}$t" "$@"
fi
exec hug s
