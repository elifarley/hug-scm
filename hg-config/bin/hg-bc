#!/usr/bin/env bash
# Assume HUG_HOME is set (exported by hug or environment)
# shellcheck source=hg-config/lib/hug-common
. "$HUG_HOME/hg-config/lib/hug-common"
# shellcheck source=hg-config/lib/hug-hg-kit
. "$HUG_HOME/hg-config/lib/hug-hg-kit"
set -euo pipefail  # Exit on error, undefined vars, pipe failures

# Part of the Hug tool suite - Mercurial version

show_help() {
  cat <<'EOF'
hug bc: Create a new bookmark and switch to it.

USAGE:
  hug bc <bookmark-name>

OPTIONS:
  -h, --help     Show this help message and exit.

DESCRIPTION:
  Creates a new bookmark at the current changeset and activates it.
  Bookmarks in Mercurial are similar to Git branches.

EXAMPLES:
  hug bc feature    # Create and activate bookmark 'feature'

SEE ALSO:
  hug b   : Switch to a bookmark
  hug bl  : List bookmarks
EOF
}

test "${1:-}" = '-h' -o "${1:-}" = '--help' && {
  show_help
  exit
}

# Early exit if not in Mercurial repo
check_hg_repo

if [ $# -eq 0 ]; then
  error "Bookmark name is required"
fi

# Create and activate bookmark
hg bookmark "$1"
