#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2> /dev/null || greadlink -f "$0")" || CMD_BASE="$0"
CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-hg-kit; do . "$CMD_BASE/../lib/$f"; done # Load common constants and functions
set -euo pipefail                                                # Exit on error, undefined vars, pipe failures

# Part of the Hug tool suite - Mercurial version

show_help() {
  cat << 'EOF'
hug c: Commit changes.

USAGE:
  hug c [-m message]

OPTIONS:
  -m <msg>       Commit message
  -h, --help     Show this help message and exit.

DESCRIPTION:
  Commits all changes in the working directory.
  If no message is provided, opens the default editor.

SEE ALSO:
  hug ca  : Commit all tracked changes (same as c in Mercurial)
  hug caa : Commit all changes (tracked + untracked)
EOF
}

test "${1:-}" = '-h' -o "${1:-}" = '--help' && {
  show_help
  exit
}

# Early exit if not in Mercurial repo
check_hg_repo

# Commit with all arguments passed through
hg commit "$@"
