#!/usr/bin/env bash
CMD_BASE="$(readlink -f "$0" 2>/dev/null || greadlink -f "$0")" || CMD_BASE="$0"; CMD_BASE="$(dirname "$CMD_BASE")"
for f in hug-common hug-hg-kit; do . "$CMD_BASE/../lib/$f"; done # Load common constants and functions
set -euo pipefail  # Exit on error, undefined vars, pipe failures

# Part of the Hug tool suite - Mercurial version

show_help() {
  cat <<'EOF'
hug aa: Add everything (tracked + untracked + removals).

USAGE:
  hug aa

OPTIONS:
  -h, --help     Show this help message and exit.

DESCRIPTION:
  Adds all files in the repository, including:
  - Modified tracked files
  - New untracked files
  - Removed files

  This uses Mercurial's addremove command to intelligently
  detect additions and removals.

SEE ALSO:
  hug a: Add tracked files or specific files
EOF
}

test "${1:-}" = '-h' -o "${1:-}" = '--help' && {
  show_help
  exit
}

# Early exit if not in Mercurial repo
check_hg_repo

# Use addremove to handle all changes
hg addremove
